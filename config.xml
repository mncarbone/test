<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mncarbone.dni-scanner" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DNI-Scanner</name>
    <description>
        DNI Scanner.
    </description>
    <author href="https://github.com/mncarbone" email="consultas@mncarbone.com.ar">
     MNC
    </author>
    <content src="index.html" />
    <icon src="logo.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist"/>
    <plugin name="cordova-plugin-camera"/>
    <plugin name="cordova-plugin-barcodescanner" />

</widget>
